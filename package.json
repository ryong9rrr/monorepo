{
  "name": "my-monorepo",
  "packageManager": "yarn@4.0.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:all": "yarn workspaces foreach -A --parallel run dev",
    "dev:web": "yarn workspace @monorepo/web run dev",
    "dev:webapp": "yarn workspace @monorepo/webapp run dev",
    "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\""
  },
  "devDependencies": {
    "prettier": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "typescript": "5.0.4"
  }
}
